{
    "schema": [
        "recordlist",
        "loanout"
    ],
    "pageType": "loanout",
    "recordType": "loanout",
    "dataContext": {
        "options": {
            "recordType": "loanout" 
        } 
    },
    "pageSpec": {
        "titleBar": {
            "href": "loanOutTitleBar.html",
            "templateSelector": ".csc-loanOut-titleBar-template",
            "targetSelector": ".csc-loanOut-titleBar-container"
        },
        "dateEntry": {
            "href": "loanOutTemplate.html",
            "templateSelector": ".csc-loanOut-template",
            "targetSelector": ".csc-record-edit-container"
        },
        "sidebar": {
            "href": "right-sidebar.html",
            "templateSelector": ".csc-right-sidebar",
            "targetSelector": ".csc-sidebar-container" 
        },
        "footer": {
            "href": "footer.html",
            "templateSelector": ".csc-footer",
            "targetSelector": ".csc-footer-container" 
        } 
    },
    "selectors": {
        "titleBar":  ".csc-loanOut-titleBar-template",
        "recordEditor": ".csc-loanOut-template",
        "sidebar": ".csc-sidebar"
    },
    "components": {
        "tabs": {
            "type": "cspace.tabs"
        },
        "titleBar": {
            "type": "cspace.titleBar"
        },
        "recordEditor": {
            "type":  "cspace.recordEditor",
            "options": {
                "selectors": {
                    "identificationNumber": ".csc-loanOut-loanOutNumber"
                },
                "strings": {
                    "identificationNumberRequired": "Please specify a Loan Out Number"
                },
                "dataContext": "{pageBuilder}.dataContext",
                "applier": "{pageBuilder}.applier",
                "uispec": "{pageBuilder}.uispec.recordEditor",
                "model": "{pageBuilder}.model" 
            }
        },
        "sidebar": {
            "type": "cspace.sidebar",
            "options": {
                "uispec": "{pageBuilder}.uispec.sidebar",
                "applier": "{pageBuilder}.applier",
                "model": "{pageBuilder}.model",
                "primaryRecordType": "{pageBuilder}.options.pageType"
            }
        }
    }
}