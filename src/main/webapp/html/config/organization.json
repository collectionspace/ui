{
    "schema": [
        "recordlist",
        "organization"
    ],
    "recordType": "organization",
    "dataContext": {
        "options": {
            "recordType": "organization",
            "baseUrl": "../../chain/vocabularies" 
        } 
    },
    "pageSpec": {
        "titleBar": {
            "href": "organizationTitleBar.html",
            "templateSelector": ".csc-organizationAuthority-titleBar-template",
            "targetSelector": ".csc-organizationAuthority-titleBar-container"
        },
        "recordEditor": {
            "href": "%readonlyorganizationTemplate.html",
            "templateSelector": ".csc-organizationAuthority-template",
            "targetSelector": ".csc-record-edit-container" 
        },
        "sidebar": {
            "href": "right-sidebar.html",
            "templateSelector": ".csc-right-sidebar",
            "targetSelector": ".csc-sidebar-container" 
        },
        "footer": {
            "href": "footer.html",
            "templateSelector": ".csc-footer",
            "targetSelector": ".csc-footer-container" 
        } 
    },
    "pageType": "organization",
    "selectors": {
        "titleBar": ".csc-organizationAuthority-template",
        "recordEditor": ".csc-organizationAuthority-template",
        "sidebar": ".csc-sidebar"
    },
    "components": {
        "tabs": {
            "type": "cspace.tabs"
        },
        "titleBar": {
            "type": "cspace.titleBar"
        },
        "recordEditor": {
            "type":  "cspace.recordEditor",
            "options": {
                "selectors": {
                    "identificationNumber": ".csc-organizationAuthority-displayName" 
                },
                "strings": {
                    "identificationNumberRequired": "Please specify a Display Name" 
                },
                "dataContext": "{pageBuilder}.dataContext",
                "applier": "{pageBuilder}.applier",
                "uispec": "{pageBuilder}.uispec.recordEditor",
                "model": "{pageBuilder}.model"
            }
        },
        "sidebar": {
            "type": "cspace.sidebar",
            "options": {
                "uispec": "{pageBuilder}.uispec.sidebar",
                "applier": "{pageBuilder}.applier",
                "model": "{pageBuilder}.model",
                "primaryRecordType": "{pageBuilder}.options.pageType"
            }
        }
    }
}