{
    "schema": [
        "recordlist",
        "recordtypes",
        "intake"
    ],
    "pageType": "intake",
    "recordType": "intake",
    "dataContext": {
        "options": {
            "recordType": "intake" 
        } 
    },
    "pageSpec": {
        "titleBar": {
            "href": "IntakeTitleBar.html",
            "templateSelector": ".csc-intake-titleBar-template",
            "targetSelector": ".csc-intake-titleBar-container" 
        },
        "recordEditor": {
            "href": "%readonlyIntakeTemplate.html",
            "templateSelector": ".csc-intake-template",
            "targetSelector": ".csc-record-edit-container"
        },
        "footer": {
            "href": "footer.html",
            "templateSelector": ".csc-footer",
            "targetSelector": ".csc-footer-container" 
        } 
    },
    "selectors": {
        "titleBar": ".csc-intake-titleBar-template",
        "recordEditor": ".csc-intake-template"
    },
    "components": {
        "tabs": {
            "type": "cspace.tabs"
        },
        "titleBar": {
            "type": "cspace.titleBar"
        },
        "recordEditor": {
            "type":  "cspace.recordEditor",
            "options": {
                "selectors": {
                    "identificationNumber": ".csc-intake-entry-number" 
                },
                "strings": {
                    "identificationNumberRequired": "Please specify an Intake Entry Number" 
                },
                "dataContext": "{pageBuilder}.dataContext",
                "applier": "{pageBuilder}.applier",
                "uispec": "{pageBuilder}.uispec.recordEditor",
                "model": "{pageBuilder}.model" 
            }
        },
        "sidebar": {
            "type": "cspace.sidebar"
        }
    }
}