{
    "schema": [
        "recordlist",
        "recordtypes",
        "organization"
    ],
    "recordType": "organization",
    "dataContext": {
        "options": {
            "recordType": "organization",
            "baseUrl": "../../chain/vocabularies" 
        } 
    },
    "pageSpec": {
        "recordEditor": {
            "href": "%readonlypages/OrganizationTemplate.html",
            "templateSelector": ".csc-organizationAuthority-template",
            "targetSelector": ".csc-record-edit-container" 
        }
    },
    "pageType": "organization",
    "selectors": {
        "recordEditor": ".csc-organizationAuthority-template"
    },
    "components": {
        "tabs": {
            "type": "cspace.tabs"
        },
        "titleBar": {
            "type": "cspace.titleBar",
            "options": {
                "fields": [
                    "fields.displayName"
                ]
            }
        },
        "recordEditor": {
            "type":  "cspace.recordEditor",
            "options": {
                "selectors": {
                    "identificationNumber": ".csc-organizationAuthority-displayName" 
                },
                "strings": {
                    "identificationNumberRequired": "Please specify a Display Name" 
                },
                "dataContext": "{pageBuilder}.dataContext",
                "applier": "{pageBuilder}.applier",
                "uispec": "{pageBuilder}.uispec.recordEditor",
                "model": "{pageBuilder}.model"
            }
        },
        "sidebar": {
            "type": "cspace.sidebar"
        },
        "header": {
            "type": "cspace.header",
            "options": {
                "schema": "{pageBuilder}.schema",
                "permissions": "{pageBuilder}.permissions"
            }
        }
    }
}