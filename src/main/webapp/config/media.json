{
    "pageBuilder": {
        "options": {
            "pageType": "media",
            "selectors": {
                "recordEditor": ".csc-media-template"
            },
            "components": {
                "recordEditor": {
                    "type":  "cspace.recordEditor",
                    "options": {
                        "selectors": {
                            "identificationNumber": ".csc-media-identificationNumber",
                            "uploader": ".csc-media-upload",
                            "mediaImage": ".csc-media-image"
                        },
                        "selectorsToIgnore": ["requiredFields", "identificationNumber", "header", "togglable", "uploader"],
                        "strings": {
                            "identificationNumberRequired": "Please specify an Identification Number"
                        },
                        "invokers": {
                            "navigateToFullImage": "navigateToFullImage"
                        },
                        "styles": {
                            "mediaImage": "cs-media-image"
                        },
                        "applier": "{pageBuilder}.applier",
                        "uispec": "{pageBuilder}.options.uispec.recordEditor",
                        "model": "{pageBuilder}.model",
                        "deferredComponents": {
                            "uploader": {
                                "type": "cspace.mediaUploader",
                                "options": {
                                    "urls": {
                                        "expander": {
                                            "type": "fluid.deferredInvokeCall",
                                            "func": "cspace.componentUrlBuilder",
                                            "args": {
                                                "upload": "%chain/uploads/"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "titleBar": {
                    "type": "cspace.titleBar",
                    "options": {
                        "fields": [
                            "fields.identificationNumber",
                            "fields.title"
                        ]
                    }
                },
                "header": {
                    "type": "cspace.header",
                    "options": {
                        "schema": "{pageBuilder}.schema",
                        "permissions": "{pageBuilder}.permissions"
                    }
                },
                "tabs": {
                    "type": "cspace.tabs"
                },
                "sidebar": {
                    "type": "cspace.sidebar"
                }
            }
        }
    },
    "pageBuilderIO": {
        "options": {
            "recordType": "media",
             "schema": [
                "recordlist",
                "recordtypes",
                "media"
            ],
            "pageSpec": {
                "recordEditor": {
                    "href": "%readonlypages/MediaTemplate.html",
                    "templateSelector": ".csc-media-template",
                    "targetSelector": ".csc-record-edit-container"
                }
            }
        }
    }
}