{
    "schema": [
        "recordlist",
        "recordtypes",
        "movement"
    ],
    "pageType": "movement-tab",
    "recordType": "movement",
    "pageSpec": {
        "list": {
            "href": "pages/MovementTabRecordListTemplate.html",
            "templateSelector": ".csc-movement-tab-record-list",
            "targetSelector": ".csc-movement-tab .div-for-list-of-records"
        },
        "details": {
            "href": "%readonlypages/MovementTemplate.html",
            "templateSelector": ".csc-movement-template",
            "targetSelector": ".csc-movement-tab .div-for-recordEditor"
        } 
    },
    "selectors": {
        "relatedRecordsTab": ".csc-movement-tab"
    },
    "components": {
        "relatedRecordsTab": {
            "type": "cspace.relatedRecordsTab",
            "options": {
                "primary": "{pageBuilder}.options.primary",
                "related": "{pageBuilder}.options.related",
                "applier": "{pageBuilder}.applier",
                "model": "{pageBuilder}.model",
                "uispec": "{pageBuilder}.uispec",
                "listEditor": {
                    "options": {
                        "initList": "cspace.listEditor.receiveData",
                        "dataContext": {
                            "options": {
                                "recordType": "movement",
                                "dataSource": {
                                    "options": {
                                        "schema": "{pageBuilder}.schema" 
                                    }
                                }
                            }
                        },
                        "details": {
                            "options": {
                                "selectors": {
                                    "identificationNumber": ".csc-movement-currentLocation" 
                                },
                                "strings": {
                                    "identificationNumberRequired": "Please specify a Current Location" 
                                } 
                            } 
                        }
                    }
                }
            }
        }
    }
}