{
    "schema": [
        "recordlist",
        "recordtypes",
        "acquisition"
    ],
    "pageType": "acquisition",
    "recordType": "acquisition",
    "dataContext": {
        "options": {
            "recordType": "acquisition" 
        } 
    },
    "pageSpec": {
        "recordEditor": {
            "href": "%readonlyacquisitionTemplate.html",
            "templateSelector": ".csc-acquisition-template",
            "targetSelector": ".csc-record-edit-container" 
        },
        "footer": {
            "href": "footer.html",
            "templateSelector": ".csc-footer",
            "targetSelector": ".csc-footer-container" 
        } 
    },
    "components": {
        "tabs": {
            "type": "cspace.tabs"
        },
        "titleBar": {
            "type": "cspace.titleBar",
            "options": {
                "fields": [
                    "fields.acquisitionReferenceNumber", {
                    "type": "repeatableMatch",
                    "queryPath": "fields.acquisitionSources",
                    "childPath": "_primary",
                    "value": true,
                    "path": "acquisitionSource"
                }]
            }
        },
        "recordEditor": {
            "type":  "cspace.recordEditor",
            "options": {
                "selectors": {
                    "identificationNumber": ".csc-acquisition-numberPatternChooser-reference-number" 
                },
                "strings": {
                    "identificationNumberRequired": "Please specify an Acquisition Reference Number" 
                },
                "dataContext": "{pageBuilder}.dataContext",
                "applier": "{pageBuilder}.applier",
                "uispec": "{pageBuilder}.uispec.recordEditor",
                "model": "{pageBuilder}.model" 
            }
        },
        "sidebar": {
            "type": "cspace.sidebar"
        }
    },
    "selectors": {
        "recordEditor": ".csc-acquisition-template"
    }
}