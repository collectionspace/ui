{
    "schema": [
        "recordlist",
        "recordtypes",
        "intake"
    ],
    "pageType": "intake-tab",
    "recordType": "intake",
    "pageSpec": {
        "details": {
            "href": "%readonlypages/IntakeTemplate.html",
            "templateSelector": ".csc-intake-template",
            "targetSelector": ".csc-relatedRecordsTab-intake .csc-relatedRecordsTab-recordEditor"
        } 
    },
    "selectors": {
        "relatedRecordsTab": ".csc-relatedRecordsTab-intake"
    },
    "components": {
        "relatedRecordsTab": {
            "type": "cspace.relatedRecordsTab",
            "options": {
                "primary": "{pageBuilder}.options.primary",
                "related": "{pageBuilder}.options.related",
                "applier": "{pageBuilder}.applier",
                "model": "{pageBuilder}.model",
                "uispec": "{pageBuilder}.uispec",
                "strings": {
                    "editRecord": "Edit Intake Record",
                    "recordList": "Related Intake Records",
                    "newRecordRow": "New Intake Record"
                },
                "listEditor": {
                    "options": {
                        "initList": "cspace.listEditor.receiveData",
                        "dataContext": {
                            "options": {
                                "recordType": "intake",
                                "dataSource": {
                                    "options": {
                                        "schema": "{pageBuilder}.schema" 
                                    }
                                }
                            }
                        },
                        "details": {
                            "options": {
                                "selectors": {
                                    "identificationNumber": ".csc-intake-entry-number" 
                                },
                                "strings": {
                                    "identificationNumberRequired": "Please specify an Intake Entry Number" 
                                } 
                            } 
                        }
                    }
                }
            }
        }
    }
}