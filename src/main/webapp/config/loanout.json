{
    "schema": [
        "recordlist",
        "recordtypes",
        "loanout"
    ],
    "pageType": "loanout",
    "recordType": "loanout",
    "dataContext": {
        "options": {
            "recordType": "loanout" 
        } 
    },
    "pageSpec": {
        "recordEditor": {
            "href": "%readonlypages/LoanoutTemplate.html",
            "templateSelector": ".csc-loanOut-template",
            "targetSelector": ".csc-record-edit-container"
        }
    },
    "selectors": {
        "recordEditor": ".csc-loanOut-template"
    },
    "components": {
        "tabs": {
            "type": "cspace.tabs"
        },
        "titleBar": {
            "type": "cspace.titleBar",
            "options": {
                "fields": [
                    "fields.loanOutNumber", 
                    "fields.borrower"
                ]
            }
        },
        "recordEditor": {
            "type":  "cspace.recordEditor",
            "options": {
                "selectors": {
                    "identificationNumber": ".csc-loanOut-loanOutNumber"
                },
                "strings": {
                    "identificationNumberRequired": "Please specify a Loan Out Number"
                },
                "dataContext": "{pageBuilder}.dataContext",
                "applier": "{pageBuilder}.applier",
                "uispec": "{pageBuilder}.uispec.recordEditor",
                "model": "{pageBuilder}.model" 
            }
        },
        "sidebar": {
            "type": "cspace.sidebar"
        },
        "header": {
            "type": "cspace.header",
            "options": {
                "schema": "{pageBuilder}.schema",
                "permissions": "{pageBuilder}.permissions"
            }
        }
    }
}