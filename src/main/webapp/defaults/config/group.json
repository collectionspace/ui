{
    "pageBuilder": {
        "options": {
            "pageType": "group",
            "selectors": {
                "recordEditor": ".csc-group-template"
            },
            "components": {
                "recordEditor": {
                    "type":  "cspace.recordEditor",
                    "options": {
                        "selectors": {
                            "identificationNumber": ".csc-group-title"
                        },
                        "applier": "{pageBuilder}.applier",
                        "uispec": "{pageBuilder}.options.uispec.recordEditor",
                        "model": "{pageBuilder}.model"
                    }
                },
                "titleBar": {
                    "type": "cspace.titleBar",
                    "options": {
                        "fields": [
                            "fields.title",
                            "fields.owner"
                        ]
                    }
                },
                "header": {
                    "type": "cspace.header",
                    "options": {
                        "schema": "{pageBuilder}.schema",
                        "permissions": "{pageBuilder}.permissions"
                    }
                },
                "tabs": {
                    "type": "cspace.tabs"
                },
                "sidebar": {
                    "type": "cspace.sidebar"
                }
            }
        }
    },
    "pageBuilderIO": {
        "options": {
            "recordType": "group",
             "schema": [
                "recordlist",
                "namespaces",
                "recordtypes",
                "group"
            ],
            "pageSpec": {
                "recordEditor": {
                    "href": "%readonlypages/GroupTemplate.html",
                    "templateSelector": ".csc-group-template",
                    "targetSelector": ".csc-record-edit-container"
                }
            }
        }
    }
}
